<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
         http://www.springframework.org/schema/util
          http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.riaboshapka.controllers"/>

    <bean id="clientDao" class="com.riaboshapka.dao.impl.ClientDBDao"/>
    <!--<bean id="clientDao" class="com.riaboshapka.dao.impl.ClientsEntityManagerDao"/>-->

    <bean id="validationService" class="com.riaboshapka.validators.impl.ValidationServiceImpl">
        <!--<constructor-arg name="clientDao" ref="clientDao"/>-->
    </bean>

    <bean id="clientService" class="com.riaboshapka.services.impl.ClientServiceImpl">
        <constructor-arg name="clientDBDao" ref="clientDao"/>
        <constructor-arg name="validationService" ref="validationService"/>
    </bean>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/" />
        <property name="suffix" value=".jsp" />
    </bean>


</beans>